{
  "manifest_version": 3,
  "name": "Gmail AI Classifier",
  "version": "1.0",
  "description": "Classifies Gmail emails using AI and shows the label in Gmail UI.",
  "permissions": [
    "scripting",
    "activeTab",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}